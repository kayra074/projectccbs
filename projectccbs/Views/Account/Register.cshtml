@model projectccbs.Models.ViewModels.RegisterViewModel
<h2>Registreren</h2>
<form method="post" asp-action="Register" asp-controller="Account">
    <h4>Account aanmaken</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Voorletter"></label> 
        <div class="col-md-10">
            <input asp-for="Voorletter" class="form-control" />
            <span asp-validation-for="Voorletter" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Voornaam"></label>
        <div class="col-md-10">
            <input asp-for="Voornaam" class="form-control" />
            <span asp-validation-for="Voornaam" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Middelnaam"></label>
        <div class="col-md-10">
            <input asp-for="Middelnaam" class="form-control" />
            <span asp-validation-for="Middelnaam" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Achternaam"></label>
        <div class="col-md-10">
            <input asp-for="Achternaam" class="form-control" />
            <span asp-validation-for="Achternaam" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Adres"></label>
        <div class="col-md-10">
            <input asp-for="Adres" class="form-control" />
            <span asp-validation-for="Adres" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Postcode"></label>
        <div class="col-md-10">
            <input asp-for="Postcode" class="form-control" />
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Woonplaats"></label>
        <div class="col-md-10">
            <input asp-for="Woonplaats" class="form-control" />
            <span asp-validation-for="Woonplaats" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Geboortedatum"></label>
        <div class="col-md-10">
            <input asp-for="Geboortedatum" class="form-control" />
            <span asp-validation-for="Geboortedatum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Telefoonnummer"></label>
        <div class="col-md-10">
            <input asp-for="Telefoonnummer" class="form-control" />
            <span asp-validation-for="Telefoonnummer" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Bankrekening"></label>
        <div class="col-md-10">
            <input asp-for="Bankrekening" class="form-control" />
            <span asp-validation-for="Bankrekening" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Password"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="RoleName"></label>
        <div class="col-md-10">
            <select asp-for="RoleName"
                    asp-items="@projectccbs.Utility.Helper.GetRolesForDropDown(
                                User.IsInRole(projectccbs.Utility.Helper.Admin))"
                    class="form-control">
                <option selected>-- Selecteer rol</option>
            </select>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Registreer" class="btn btn-success" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 offset-md-2">
            <a asp-action="Login">Login</a>
        </div>
    </div>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
</form>
